<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jeuxdedes.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="TOP_CENTER">
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
      <children>
         <ImageView fx:id="de1Image" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
            <HBox.margin>
               <Insets right="5.0" />
            </HBox.margin>
            <image>
               <Image url="@assets/1.png" />
            </image>
         </ImageView>
         <ImageView fx:id="de2Image" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@assets/5.png" />
            </image>
         </ImageView>
      </children>
   </HBox>

    <Label fx:id="welcomeText" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
          <Button fx:id="jouer" alignment="TOP_CENTER" contentDisplay="CENTER" onAction="#onPlayButtonClick" text="Jouer ">
            <HBox.margin>
               <Insets right="5.0" />
            </HBox.margin></Button>
         <Button  fx:id="stop" onAction="#onStopButtonClick" mnemonicParsing="false" text="Stop" />
      </children>
   </HBox>
</VBox>
