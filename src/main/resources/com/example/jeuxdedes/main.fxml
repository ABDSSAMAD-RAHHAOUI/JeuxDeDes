<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="307.0" prefWidth="299.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jeuxdedes.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="TOP_CENTER" prefHeight="102.0" prefWidth="82.0">
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
      <children>
         <VBox prefHeight="100.0" prefWidth="56.0" style="-fx-background-color: gray;">
            <children>
               <ImageView fx:id="de1Image" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@assets/1.png" />
                  </image>
               </ImageView>
            </children>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="112.0" />
         <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: gray;">
            <children>
               <ImageView fx:id="de2Image" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@assets/5.png" />
                  </image>
               </ImageView>
            </children>
         </VBox>
      </children>
   </HBox>

    <Label fx:id="welcomeText" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
          <Button fx:id="jouer" alignment="TOP_CENTER" contentDisplay="CENTER" onAction="#onPlayButtonClick" text="Jouer ">
            <HBox.margin>
               <Insets right="5.0" />
            </HBox.margin></Button>
         <Button fx:id="stop" mnemonicParsing="false" onAction="#onStopButtonClick" text="Stop" />
      </children>
   </HBox>
</VBox>
